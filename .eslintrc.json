{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended", // Added TypeScript recommended rules
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser", // Added TypeScript parser
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "prettier",
    "@typescript-eslint" // Added TypeScript plugin
  ],
  "rules": {
    "react/prop-types": "off",
    "prettier/prettier": ["error"],
    "@typescript-eslint/explicit-module-boundary-types": "off" // Optional: Disable explicit module boundary types if you don't want to specify them for all functions
  },
  "settings": {
    "react": {
      "version": "detect" // Automatically detect the version of React for linting
    }
  },
}
